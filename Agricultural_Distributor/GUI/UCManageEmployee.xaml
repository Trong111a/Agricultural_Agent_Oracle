<UserControl x:Class="Agricultural_Distributor.GUI.UCManageEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="960">
    <UserControl.Resources>
        <Style x:Key="StyleButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2E8068"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="209"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="18,18,18,18">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7F9C93"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1C6751"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Cursor="" Background="#FF35A0E4">
        <UserControl>
            <Grid Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Border BorderThickness="0" BorderBrush="Black"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="700"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="lvProducts" Foreground="Black" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="lvProducts_SelectionChanged" Margin="0,-57,0,0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Mã NV" Width="50" DisplayMemberBinding="{Binding EmployeeId}"/>
                                <GridViewColumn Header="Tên" Width="150" DisplayMemberBinding="{Binding EmployeeName}"/>
                                <GridViewColumn Header="Giới tính" Width="50" DisplayMemberBinding="{Binding Sex}"/>
                                <GridViewColumn Header="Ngày sinh" Width="100" DisplayMemberBinding="{Binding Birthday}"/>
                                <GridViewColumn Header="Địa chỉ" Width="100" DisplayMemberBinding="{Binding EmployeeAddress}"/>
                                <GridViewColumn Header="Số điện thoại" Width="100" DisplayMemberBinding="{Binding PhoneNumber}"/>
                                <GridViewColumn Header="Email" Width="100" DisplayMemberBinding="{Binding Email}"/>
                                <GridViewColumn Header="Tình trạng" Width="100" DisplayMemberBinding="{Binding Status}"/>

                            </GridView>
                        </ListView.View>
                    </ListView>

                </Grid>
                <Label Foreground="#FF2E8068" Content="Chỉnh sửa thông tin nhân viên" Margin="708,14,0,0" VerticalAlignment="Top" Width="242" HorizontalContentAlignment="Center" HorizontalAlignment="Left" AutomationProperties.IsOffscreenBehavior="FromClip" FontWeight="UltraBold" FontSize="13"/>

                <Label Content="Họ Tên:" HorizontalAlignment="Left" Margin="717,29,0,0" VerticalAlignment="Top" FontWeight="DemiBold" Grid.Row="1"/>
                <TextBox x:Name="txtEmployeeName" Margin="780,33,13,0" Grid.Row="1" VerticalAlignment="Top" TextWrapping="Wrap"/>

                <Label Content="Giới tính:" HorizontalAlignment="Left" Margin="714,60,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="DemiBold"/>
                <TextBox x:Name="txtSex" Margin="780,64,13,0" Grid.Row="1" VerticalAlignment="Top" TextWrapping="Wrap"/>

                <Label Content="Ngày sinh:" HorizontalAlignment="Left" Margin="714,91,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="DemiBold"/>

                <Label Content="Địa chỉ:" HorizontalAlignment="Left" Margin="714,122,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="DemiBold"/>
                <TextBox x:Name="txtAddress" Margin="780,126,13,0" Grid.Row="1" VerticalAlignment="Top" TextWrapping="Wrap"/>

                <Label Content="SDT:" HorizontalAlignment="Left" Margin="714,153,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="DemiBold"/>
                <TextBox x:Name="txtPhoneNumber" Margin="780,157,13,0" Grid.Row="1" VerticalAlignment="Top" TextWrapping="Wrap"/>

                <Label Content="Email:" HorizontalAlignment="Left" Margin="714,184,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="DemiBold"/>
                <TextBox x:Name="txtEmail" Margin="780,188,13,0" Grid.Row="1" VerticalAlignment="Top" TextWrapping="Wrap"/>

                <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Margin="707,10,7,283" CornerRadius="5,5,5,5"/>
                <Button FontWeight="Bold" Style="{StaticResource StyleButton}" x:Name="add" Content="Thêm" HorizontalAlignment="Left" Margin="708,298,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="-0.681,0.2" Width="73" Click="Button_Click"/>
                <Button FontWeight="Bold" Style="{StaticResource StyleButton}" x:Name="update" Content="Chỉnh Sửa" HorizontalAlignment="Left" Margin="792,298,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="-0.681,0.2" Width="74" Click="update_Click"/>
                <Button FontWeight="Bold" Style="{StaticResource StyleButton}" x:Name="delete" Content="Khóa" HorizontalAlignment="Left" Margin="874,298,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="-0.681,0.2" Width="73" Click="delete_Click"/>
                <Label x:Name="lbPosition" Content="Posion:" HorizontalAlignment="Left" Margin="714,212,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="DemiBold"/>
                <ComboBox x:Name="cbPosition" HorizontalAlignment="Left" Margin="780,214,0,0" Grid.Row="1" VerticalAlignment="Top" Width="167">
                    <ComboBoxItem Content="Nhân viên" />
                    <ComboBoxItem Content="Quản lý" />
                </ComboBox>
                <DatePicker x:Name="txtBirthday" HorizontalAlignment="Left" Margin="781,92,0,0" Grid.Row="1" VerticalAlignment="Top" Width="166"/>

            </Grid>
        </UserControl>

    </Grid>
</UserControl>
