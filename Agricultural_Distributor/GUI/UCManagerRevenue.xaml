<UserControl x:Class="Agricultural_Distributor.GUI.UCManagerRevenue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor.GUI"
             mc:Ignorable="d" 
             Height="600" Width="960">
    <UserControl.Resources>
        <Style x:Key="StyleButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2E8068"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="209"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="18,18,18,18">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7F9C93"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1C6751"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <ListView x:Name="lvProducts" Foreground="Black" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,57,0,139">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Chọn" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Tên sản phẩm" Width="430" DisplayMemberBinding="{Binding ProductName}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Nhập năm cần xem doanh thu:" FontSize="18" FontWeight="Bold" Foreground="#FF2E8068" HorizontalAlignment="Left" Margin="3,472,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNam" HorizontalAlignment="Left" Margin="279,482,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Style="{StaticResource StyleButton}" Content="Xem doanh thu" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Margin="15,524,0,0" VerticalAlignment="Top" Click="Button_Click" Width="123"/>
        <Label Content="Lựa chọn sản phẩm cần kiểm tra" FontSize="18" FontWeight="Bold" Foreground="#FF2E8068" HorizontalAlignment="Left" Margin="4,12,0,0" VerticalAlignment="Top"/>



    </Grid>
</UserControl>
