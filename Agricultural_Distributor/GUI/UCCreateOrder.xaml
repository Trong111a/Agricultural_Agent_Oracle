<UserControl x:Class="Agricultural_Distributor.UCCreateOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor"
             mc:Ignorable="d" 
             Height="600" Width="960">
    <UserControl.Resources>
        <Style x:Key="StyleButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2E8068"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="209"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="18,18,18,18">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7F9C93"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1C6751"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border BorderThickness="0" BorderBrush="Black">
                <Button Style="{StaticResource StyleButton}" x:Name="btnCreateOrder" Content="TẠO ĐƠN HÀNG" FontSize="15" FontWeight="Bold" Height="40" Width="150" Margin="798,8,8,8" Click="btnCreateOrder_Click"/>
            </Border>
            <TextBox Visibility="Collapsed" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Nhập tên nông sản ..." FontSize="15" VerticalContentAlignment="Center"  VerticalAlignment="Center" Width="771" Height="38" Padding="15,0,0,0" BorderThickness="1" BorderBrush="Black"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListView x:Name="lvProducts" Foreground="Black" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,-59,0,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Chọn" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Số lượng" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox x:Name="tbQuantity" Width="60" TextChanged="TextBox_TextChanged" IsEnabled="False"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Mã nông sản" Width="70" DisplayMemberBinding="{Binding ProductId}"/>
                        <GridViewColumn Header="Tên" Width="150" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Số lượng tồn kho" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Quantity}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#FF2E8068"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Quantity}" Value="0">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Tiêu chuẩn chất lượng" Width="120" DisplayMemberBinding="{Binding QualityStandard}"/>
                        <GridViewColumn Header="Giá mua" Width="100" DisplayMemberBinding="{Binding PurchasePrice}"/>
                        <GridViewColumn Header="Giá bán" Width="100" DisplayMemberBinding="{Binding SellingPrice}"/>
                        <GridViewColumn Header="Đơn vị đo lường" Width="100" DisplayMemberBinding="{Binding MeasurementUnit}"/>
                        
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBlock x:Name="txtTotalPrice" Grid.Column="1" Foreground="Red" FontSize="16" FontWeight="Bold" Margin="10,494,10,18"
           Text="Tổng tiền: 0 đ"/>
            <TextBlock Foreground="#FF2E8068" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Giảm giá:" VerticalAlignment="Top" Width="60"/>

            <TextBlock Foreground="#FF2E8068" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Left" Margin="17,56,0,0" TextWrapping="Wrap" Text="Ghi chú:" VerticalAlignment="Top" Width="60"/>
            <TextBox x:Name="tbNote" Grid.Column="1" HorizontalAlignment="Left" Margin="86,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149" Height="422"/>
            <TextBox x:Name="tbDiscount" Grid.Column="1" HorizontalAlignment="Left" Margin="86,9,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149"/>
        </Grid>
    </Grid>
</UserControl>
