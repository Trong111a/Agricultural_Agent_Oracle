<UserControl x:Class="Agricultural_Distributor.UCManageProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor"
             mc:Ignorable="d"  Height="600" Width="960" BorderThickness="1,0,0,0">
    <Grid Background="#FF2E8068" Height="600" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="118*"/>
            <ColumnDefinition Width="841*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="500"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Text="DANH SÁCH NÔNG SẢN" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"
               FontSize="23"
               Foreground="White"
               FontWeight="Bold"/>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"  x:Name="SearchContainer">
                <TextBox x:Name="txtSearch" HorizontalAlignment="Center"
                         Margin="10,0,0,0" 
                         TextWrapping="Wrap" 
                         FontSize="15"
                         VerticalContentAlignment="Center" 
                         VerticalAlignment="Center"
                         Width="771"
                         Height="38" 
                         Padding="15,0,0,0"
                         BorderThickness="1"
                         BorderBrush="Black" TextChanged="txtSearch_TextChanged"/>
                <!--GotFocus="txtSearch_GotFocus"-->
                <!--LostFocus="txtSearch_LostFocus"-->
            </Grid>
            <!--<Grid Grid.Column="1">
                <Border BorderThickness="2" BorderBrush="Black">
                    <Button x:Name="btnAdd" Content="Thêm nông sản" FontSize="15" FontWeight="Bold" Height="40" Width="150" Click="btnAdd_Click"/>
                </Border>
            </Grid>-->
            

        </Grid>
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <ScrollViewer x:Name="ProductScrollViewer" VerticalScrollBarVisibility="Auto" ScrollChanged="ProductScrollViewer_ScrollChanged">
                <ItemsControl x:Name="ProductGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
