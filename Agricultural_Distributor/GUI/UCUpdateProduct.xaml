<UserControl x:Class="Agricultural_Distributor.UCUpdateProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="960" BorderThickness="1,0,0,0">
    <UserControl.Resources>
        <Style x:Key="StyleButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2E8068"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="209"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="18,18,18,18">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7F9C93"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1C6751"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Right" Width="959">
            <Label Content="CHỈNH SỬA THÔNG TIN NÔNG SẢN"  VerticalAlignment="Center" Width="600" Height="40" FontSize="30" FontFamily="Tahoma" FontWeight="SemiBold" BorderThickness="1,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Style="{StaticResource StyleButton}" x:Name="btnExit" Content="THOÁT" HorizontalAlignment="Left" Margin="863,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="21.923,0.171" Height="40" Width="59" Click="btnExit_Click"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height ="55"/>
                <RowDefinition Height ="55"/>
                <RowDefinition Height ="55"/>
                <RowDefinition Height ="55"/>
                <RowDefinition Height ="80"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="710"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Tên nông sản: " HorizontalAlignment="Left"  Width="181" Height="46" FontSize="22" FontWeight="SemiBold" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtName" Text="{Binding Name}" Margin="10,2,87,0" VerticalAlignment="Top" Height="40" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>

            <Label Grid.Row="1" Grid.Column="0" Content="Giá mua: " HorizontalAlignment="Left"  Width="181" Height="46" FontSize="22" FontWeight="SemiBold" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtPurchasePrice" Text="{Binding PurchasePrice}" Margin="10,2,87,0" VerticalAlignment="Top" Height="40" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>

            <Label Grid.Row="2" Grid.Column="0" Content="Giá bán: " HorizontalAlignment="Left"  Width="181" Height="46" FontSize="22" FontWeight="SemiBold" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtSellingPrice" Text="{Binding SellingPrice}" Margin="10,2,87,0" VerticalAlignment="Top" Height="40" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>

            <Label Grid.Row ="3" Grid.Column="0" Content="Số lượng: " HorizontalAlignment="Left"  Width="181" Height="46" FontSize="22" FontWeight="SemiBold"  VerticalAlignment="Top" Margin="10,0,0,0"/>

            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="181"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <TextBox Grid.Column ="0" x:Name="txtQuantity" Text="{Binding Quantity}" Margin="10,0,0,0" VerticalAlignment="Center" Height="46" Width ="240" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>
                <Label Grid.Column="1" Content="Đơn vị: " Width ="160" Height="46" FontSize="22" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="20,0,0,0" VerticalAlignment="Center"/>
                <TextBox Grid.Column ="2" x:Name="txtMeasurementUnit" Text ="{Binding MeasurementUnit}" Margin="0,0,87,0" VerticalAlignment="Center" Height="46" BorderBrush="Black" BorderThickness="1" FontSize="22"/>
            </Grid>

            <Label Grid.Row="4" Grid.Column="0" Content="Tiêu chuẩn chất lượng: " HorizontalAlignment="Center"  Width="250" Height="46" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBox Grid.Row ="4" Grid.Column="1" x:Name="txtQualityStandard" Text ="{Binding QualityStandard}" Margin="10,2,87,0" VerticalAlignment="Center" Height="65" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>


            <Label Grid.Row="5" Grid.Column="0" Content="Hình ảnh: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,51,0,0" Width="180" FontSize="22" FontWeight="SemiBold"/>
            <Grid Grid.Row="5" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black" CornerRadius="10"  Width="210" Margin="10">
                    <Image x:Name="photo"
                   Stretch="UniformToFill"
                   Width="210"
                   Height="172"
                   Margin="1,-1,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" RenderTransformOrigin="0.687,0.49" Source="{Binding ImageSource}"/>
                </Border>
                <Button Grid.Column="1" x:Name="btnInsert" Content="Chọn ảnh" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="37" Width="94" FontSize="20" FontFamily="Tahoma" Background="White" Margin="10,0,0,10" Click="btnInsert_Click"/>

            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Button x:Name="btnSave"
                Content="Lưu"
                FontSize="20"
                FontWeight="Bold"
                Height="40"
                Width="146"        
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="#33C9A1"
                Foreground="White"
                BorderThickness="1"
                BorderBrush="Black" Margin="560,0,0,0" Click="btnSave_Click"/>
            <Button x:Name="btnDelete"
                Content="Xoá"
                FontSize="20"
                FontWeight="Bold"
                Height="40"
                Width="146"        
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#FFCC3E57"
                Foreground="White"
                BorderThickness="1"
                BorderBrush="Black" Margin="727,0,0,10" Click="btnDelete_Click"/>
        </Grid>

    </Grid>

</UserControl>
