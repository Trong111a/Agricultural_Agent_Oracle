<UserControl x:Class="Agricultural_Distributor.UCAddProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="960" BorderThickness="1,0,0,0">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="THÊM NÔNG SẢN" Margin="345,0,282,0" VerticalAlignment="Center" Width="333" Height="40" FontSize="30" FontFamily="Tahoma" FontWeight="SemiBold" BorderThickness="1,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height ="55"/>
                <RowDefinition Height ="55"/>
                <RowDefinition Height ="55"/>
                <RowDefinition Height ="55"/>
                <RowDefinition Height ="80"/>
                <RowDefinition Height ="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Tên nông sản: " HorizontalAlignment="Left"  Width="181" Height="46" FontSize="22" FontWeight="SemiBold" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="10,2,87,0" VerticalAlignment="Top" Height="40" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>

            <Label Grid.Row="1" Grid.Column="0" Content="Giá mua: " HorizontalAlignment="Left"  Width="181" Height="46" FontSize="22" FontWeight="SemiBold" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPurchasePrice" Grid.Row="1" Grid.Column="1" Margin="10,2,87,0" VerticalAlignment="Top" Height="40" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>

            <Label Grid.Row="2" Grid.Column="0" Content="Giá bán: " HorizontalAlignment="Left"  Width="181" Height="46" FontSize="22" FontWeight="SemiBold" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSellingPrice" Grid.Row="2" Grid.Column="1" Margin="10,2,87,0" VerticalAlignment="Top" Height="40" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>

            <Label Grid.Row ="3" Grid.Column="0" Content="Số lượng: " HorizontalAlignment="Left"  Width="181" Height="46" FontSize="22" FontWeight="SemiBold"  VerticalAlignment="Top" Margin="10,0,0,0"/>

            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="181"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <TextBox x:Name="txtQuantity" Grid.Column ="0" Margin="10,0,0,0" VerticalAlignment="Center" Height="46" Width ="240" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>
                <Label Grid.Column="1" Content="Đơn vị: " Width ="160" Height="46" FontSize="22" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="20,0,0,0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMeasurementUnit" Grid.Column ="2" Margin="0,0,87,0" VerticalAlignment="Center" Height="46" BorderBrush="Black" BorderThickness="1" FontSize="22"/>
            </Grid>

            <Label Grid.Row="4" Grid.Column="0" Content="Tiêu chuẩn chất lượng: " HorizontalAlignment="Center"  Width="230" Height="46" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBox x:Name="txtQualityStandard" Grid.Row ="4" Grid.Column="1" Margin="10,2,87,0" VerticalAlignment="Center" Height="65" BorderBrush="Black" BorderThickness="1" FontSize="22"></TextBox>


            <Label Grid.Row="5" Grid.Column="0" Content="Hình ảnh: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,51,0,0" Width="180" FontSize="22" FontWeight="SemiBold"/>
            <Grid Grid.Row="5" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black" CornerRadius="10"  Width="210" Margin="10">
                    <Image x:Name="photo"
                   Stretch="UniformToFill"
                   Width="210"
                   Height="172"
                   Margin="1,-1,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top" RenderTransformOrigin="0.687,0.49"
                   />
                </Border>
                <Button Grid.Column="1" x:Name="btnInsert" Content="Chọn ảnh" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="37" Width="94" FontSize="20" FontFamily="Tahoma" Background="White" Margin="10,0,0,10" Click="btnInsert_Click"/>

            </Grid>
        </Grid>

        <Grid Grid.Row="2">

            <Button x:Name="btnSave"
                Content="Lưu"
                FontSize="20"
                FontWeight="Bold"
                Width="146"        
                HorizontalAlignment="Left"
                Background="#33C9A1"
                Foreground="White"
                BorderThickness="1"
                BorderBrush="Black" Margin="727,10,0,10" Click="btnSave_Click"/>
        </Grid>

    </Grid>

</UserControl>
