<UserControl x:Class="Agricultural_Distributor.UCControlCenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="600" d:DesignWidth="240">
    <UserControl.Resources>
        <Style x:Key="StyleButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF2E8068"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="209"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0,18,18,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFDADADA"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1C6751"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="#FF2E8068">
        <Button Style="{StaticResource StyleButton}" Name="btnProductManage" FontWeight="Bold" Content="QUẢN LÝ NÔNG SẢN" HorizontalAlignment="Left" Margin="0,37,0,0" VerticalAlignment="Top" Height="36" Width="209" Click="btnProductManage_Click"/>
        <Button Style="{StaticResource StyleButton}" Name="btnCreateOrder" FontWeight="Bold" Content="TẠO ĐƠN HÀNG" HorizontalAlignment="Left" Margin="0,95,0,0" VerticalAlignment="Top" Height="36" Width="209" Click="btnCreateOrder_Click"/>
        <Button Style="{StaticResource StyleButton}" Name="btnTransManage" FontWeight="Bold" Content="QUẢN LÝ PHIÊN GIAO DỊCH" HorizontalAlignment="Left" Margin="0,450,0,0" VerticalAlignment="Top" Height="36" Width="209" Click="btnTransManage_Click"/>
        <Button Style="{StaticResource StyleButton}" Name="btnCustomerManage" FontWeight="Bold" Content="QUẢN LÝ KHÁCH HÀNG" HorizontalAlignment="Left" Margin="0,153,0,0" VerticalAlignment="Top" Height="36" Width="209" Click="btnCustomerManage_Click"/>
        <Button Style="{StaticResource StyleButton}" Name="btnEmployeeManage" FontWeight="Bold" Content="QUẢN LÝ NHÂN VIÊN" HorizontalAlignment="Left" Margin="0,211,0,0" VerticalAlignment="Top" Height="36" Width="209" Click="btnEmployeeManage_Click"/>
        <Button Style="{StaticResource StyleButton}" Name="btnViewRevenue" FontWeight="Bold" Content="XEM DOANH THU" HorizontalAlignment="Left" Margin="0,390,0,0" VerticalAlignment="Top" Height="36" Width="209" Click="btnViewRevenue_Click"/>
        <Button Style="{StaticResource StyleButton}" x:Name="btnLogOut" Foreground="Red" FontWeight="Bold" Content="ĐĂNG XUẤT" HorizontalAlignment="Left" Margin="0,550,0,0" VerticalAlignment="Top" Height="36" Width="209" Click="btnLogOut_Click"/>
        <Button Style="{StaticResource StyleButton}" x:Name="btnStatistic" FontWeight="Bold" Content="THỐNG KÊ VÀ DỰ ĐOÁN" HorizontalAlignment="Left" Margin="0,270,0,0" VerticalAlignment="Top" Height="36" Width="209" Click="btnStatistic_Click"/>
        <Button Style="{StaticResource StyleButton}" x:Name="btnViewTimekeeping" FontWeight="Bold" Content="XEM LỊCH PHÂN CÔNG" HorizontalAlignment="Left" Margin="0,330,0,0" VerticalAlignment="Top" Height="36" Width="209" Click="btnViewTimekeeping_Click" />
    </Grid>
</UserControl>
