<UserControl x:Class="Agricultural_Distributor.GUI.UCTransManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor.GUI"
             mc:Ignorable="d" 
             Height="600" Width="960">
    <Grid Background="White">
        <TextBlock Foreground="#FF2E8068" HorizontalAlignment="Left" Margin="12,59,0,0" TextWrapping="Wrap" Text="HÓA ĐƠN MUA" FontSize="20" FontWeight="Bold" VerticalAlignment="Top"/>
        <TextBlock Foreground="#FF2E8068" HorizontalAlignment="Left" Margin="479,59,0,0" TextWrapping="Wrap" Text="HÓA ĐƠN BÁN" FontSize="20" FontWeight="Bold" VerticalAlignment="Top"/>
        <DatePicker Name="dtp" HorizontalAlignment="Left" Margin="126,16,0,0" VerticalAlignment="Top" Width="249"/>
        <TextBlock Foreground="#FF2E8068" HorizontalAlignment="Left" Margin="10,11,0,0" TextWrapping="Wrap" Text="Chọn ngày:" FontSize="20" FontWeight="Bold" VerticalAlignment="Top"/>
        <Button Background="#FF2E8068" Foreground="White" Name="btnSort" Content="Tra cứu" HorizontalAlignment="Left" Margin="380,16,0,0" VerticalAlignment="Top" Height="24" Width="68" Click="btnSort_Click"/>
        <Button Background="#FF2E8068" Foreground="White" Name="btnConfirmTrans" Content="XÁC NHẬN ĐÃ THANH TOÁN" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left" Margin="610,556,0,0" VerticalAlignment="Top" Height="34" Width="340" Click="btnConfirmTrans_Click"/>
        <TextBlock HorizontalAlignment="Left" Foreground="#FF2E8068" Margin="610,344,0,0" TextWrapping="Wrap" Text="Trạng thái:" FontSize="18" FontWeight="Bold" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Foreground="#FF2E8068" Margin="610,408,0,0" TextWrapping="Wrap" Text="Còn lại:" FontSize="18" FontWeight="Bold" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Foreground="#FF2E8068" Margin="610,376,0,0" TextWrapping="Wrap" Text="Thanh toán:" FontSize="18" FontWeight="Bold" VerticalAlignment="Top"/>
        <TextBlock Name="tblStatusTrans" FontWeight="Bold" HorizontalAlignment="Left" Margin="746,344,0,0" TextWrapping="Wrap" FontSize="18" VerticalAlignment="Top" Height="29" Width="302"/>
        <TextBlock Name="tblPaid" FontWeight="Bold" HorizontalAlignment="Left" Margin="746,376,0,0" TextWrapping="Wrap" FontSize="18" VerticalAlignment="Top" Height="29" Width="302"/>
        <TextBlock Name="tblLeft" FontWeight="Bold" HorizontalAlignment="Left" Margin="746,409,0,0" TextWrapping="Wrap" FontSize="18" VerticalAlignment="Top" Height="29" Width="302"/>
        <ListView Name="lvPur" Foreground="Black" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,91,480,260" SelectionChanged="lv_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mã giao dịch" Width="110" DisplayMemberBinding="{Binding TransactionId}"/>
                    <GridViewColumn Header="Mã nhân viên" Width="110" DisplayMemberBinding="{Binding EmployeeId}"/>
                    <GridViewColumn Header="Mã hóa đơn" Width="110" DisplayMemberBinding="{Binding ReceiptId}"/>
                    <GridViewColumn Header="Mã khách hàng" Width="130" DisplayMemberBinding="{Binding CustomerId}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Name="lvSell" Foreground="Black" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="480,91,0,260" SelectionChanged="lv_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mã giao dịch" Width="110" DisplayMemberBinding="{Binding TransactionId}"/>
                    <GridViewColumn Header="Mã nhân viên" Width="110" DisplayMemberBinding="{Binding EmployeeId}"/>
                    <GridViewColumn Header="Mã hóa đơn" Width="110" DisplayMemberBinding="{Binding ReceiptId}"/>
                    <GridViewColumn Header="Mã khách hàng" Width="130" DisplayMemberBinding="{Binding CustomerId}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Name="lvDetail" Foreground="Black" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,340,355,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mã nông sản" Width="150" DisplayMemberBinding="{Binding ProductId}"/>
                    <GridViewColumn Header="Tên nông sản" Width="206" DisplayMemberBinding="{Binding ProductName}"/>
                    <GridViewColumn Header="Số lượng" Width="110" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Giá" Width="130" DisplayMemberBinding="{Binding UnitPrice}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock HorizontalAlignment="Left" Margin="610,440,0,0" Foreground="#FF2E8068" TextWrapping="Wrap" Text="Giảm giá:" FontSize="18" FontWeight="Bold" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblDis" FontWeight="Bold" HorizontalAlignment="Left" Margin="746,441,0,0" TextWrapping="Wrap" FontSize="18" VerticalAlignment="Top" Height="29" Width="302"/>
        <TextBlock HorizontalAlignment="Left" Margin="610,470,0,0" Foreground="#FF2E8068" TextWrapping="Wrap" Text="Ghi chú:" FontSize="18" FontWeight="Bold" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblNote" HorizontalAlignment="Left" Margin="746,471,0,0" TextWrapping="Wrap" FontSize="15" VerticalAlignment="Top" Height="80" Width="204"/>

    </Grid>
</UserControl>
