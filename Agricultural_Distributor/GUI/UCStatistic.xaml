<UserControl x:Class="Agricultural_Distributor.GUI.UCStatistic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor.GUI"
             mc:Ignorable="d" 
             Height="600" Width="960">
    <Grid Background="White">
        <TextBlock Foreground="#FF2E8068" HorizontalAlignment="Left" Margin="18,5,0,0" TextWrapping="Wrap" Text="Thống kê" FontSize="20" FontWeight="Bold" VerticalAlignment="Top"/>
        <ListView x:Name="lsStatistic" Foreground="Black" ScrollViewer.HorizontalScrollBarVisibility="Disabled" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="17,38,326,263" SelectionChanged="lsStatistic_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mã nông sản" Width="155" DisplayMemberBinding="{Binding ProductId}"/>
                    <GridViewColumn Header="Tên nông sản" Width="456" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lsFore" Foreground="Black" ScrollViewer.HorizontalScrollBarVisibility="Disabled" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="19,371,22,29">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mã nông sản" Width="155" DisplayMemberBinding="{Binding ProductId}"/>
                    <GridViewColumn Header="Tên nông sản" Width="456" DisplayMemberBinding="{Binding ProductName}"/>
                    <GridViewColumn Header="Số lượng cần nhập vào tháng tới" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PredictedQuantity}" Foreground="#FF2E8068"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock Foreground="#FF2E8068" HorizontalAlignment="Left" Margin="18,339,0,0" TextWrapping="Wrap" Text="Dự đoán" FontSize="20" FontWeight="Bold" VerticalAlignment="Top"/>
        <ListView x:Name="lsDetail" Foreground="Black" ScrollViewer.HorizontalScrollBarVisibility="Disabled" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="634,38,22,263">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tháng" Width="150" DisplayMemberBinding="{Binding Month}"/>
                    <GridViewColumn Header="Số lượng bán" Width="150" DisplayMemberBinding="{Binding Quan}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
