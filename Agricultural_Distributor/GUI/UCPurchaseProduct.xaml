<UserControl x:Class="Agricultural_Distributor.GUI.UCPurchaseProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agricultural_Distributor.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="960">
    <UserControl.Resources>
        <Style x:Key="StyleButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2E8068"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="209"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="18,18,18,18">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7F9C93"/>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1C6751"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border BorderThickness="0" BorderBrush="Black">
                <Button Style="{StaticResource StyleButton}" x:Name="btnCreateOrder" Content="XUẤT DANH SÁCH" FontSize="15" FontWeight="Bold" Height="40" Width="150" Margin="798,8,8,8" Click="btnCreateList_Click"/>
            </Border>
            <TextBox Visibility="Collapsed" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Nhập tên nông sản ..." FontSize="15" VerticalContentAlignment="Center"  VerticalAlignment="Center" Width="771" Height="38" Padding="15,0,0,0" BorderThickness="1" BorderBrush="Black"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ListView Grid.Row="0" Foreground="Black" x:Name="lvProducts" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,-59,0,0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Chọn" Width="50">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Số lượng" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox x:Name ="txtQuantity_lsvProducts" Width="60" TextChanged="Quantity_TextChanged" IsEnabled="False" Tag="{Binding}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Mã nông sản" Width="70" DisplayMemberBinding="{Binding ProductId}"/>
                            <GridViewColumn Header="Tên" Width="150" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Số lượng tồn kho" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Quantity}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#FF2E8068"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Quantity}" Value="0">
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Tiêu chuẩn chất lượng" Width="120" DisplayMemberBinding="{Binding QualityStandard}"/>
                            <GridViewColumn Header="Giá mua" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox x:Name="txtPurPrice_lsvProducts" Text ="{Binding PurchasePrice}" Width="60" LostFocus="txtPurPrice_LostFocus" IsEnabled="False" Tag="{Binding}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <!--<GridViewColumn Header="Giá mua" Width="100" DisplayMemberBinding="{Binding PurchasePrice}"/>-->
                            <GridViewColumn Header="Giá bán" Width="100" DisplayMemberBinding="{Binding SellingPrice}"/>
                            <GridViewColumn Header="Đơn vị đo lường" Width="100" DisplayMemberBinding="{Binding MeasurementUnit}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <ListView Grid.Row="1" x:Name="lvNewProducts" d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Tên nông sản" Width="180">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox x:Name="txtName" LostFocus="txtName_LostFocus" Width="170" Text="{Binding Name}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Số lượng" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox x:Name="txtQuantity" LostFocus="txtQuantity_LostFocus" Width="90" Text="{Binding Quantity}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Giá mua" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox x:Name="txtPurchasePrice" LostFocus="txtPurchasePrice_LostFocus" Width="90" Text="{Binding PurchasePrice}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Tiêu chuẩn chất lượng"  Width="130">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox x:Name="txtQualityStandard" LostFocus="txtQualityStandard_LostFocus" Width="120" Text="{Binding QualityStandard}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Đơn vị đo lường" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox x:Name="txtMeasurementUnit" LostFocus="txtMeasurementUnit_LostFocus" Width="90" Text="{Binding MeasurementUnit}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource StyleButton}" Content="Lưu"
                                     Width="50"
                                     Height="30"
                                     Click="SaveButton_Click"
                                     Tag="{Binding}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>


            </Grid>
            
            
            <TextBlock Foreground="Red" x:Name="txtTotalPrice" Grid.Column="1" FontSize="16" FontWeight="Bold" Margin="10,494,10,18"
           Text="Tổng tiền: 0 đ"/>
            <TextBlock Foreground="#FF2E8068" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Giảm giá:" VerticalAlignment="Top" Width="60"/>

            <TextBlock Foreground="#FF2E8068" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Left" Margin="17,56,0,0" TextWrapping="Wrap" Text="Ghi chú:" VerticalAlignment="Top" Width="60"/>
            <TextBox x:Name="tbNote" Grid.Column="1" HorizontalAlignment="Left" Margin="86,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149" Height="422"/>
            <TextBox x:Name="tbDiscount" Grid.Column="1" HorizontalAlignment="Left" Margin="86,9,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149"/>
        </Grid>
    </Grid>
</UserControl>
